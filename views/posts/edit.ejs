<%- include("../partials/header") %>

<!--Body Content-->
<div class="container">
    <div class="row" style="text-align: center;">
        <!--Title-->
        <h1 class="col-lg-12" style="width: 100%; margin: 30px auto">Editar <%= post.name %></h1>
            <div style="width: 30%; margin: 0 auto">
            <!--Form-->
            <form class="col-lg-12" action="/posts/<%= post._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="post[name]" value="<%= post.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="post[bodytext]" value="<%= post.bodytext %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="post[image]" value="<%= post.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="post[description]" value="<%= post.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Guardar</button>
                </div>
            </form>
            <!--Go Back Button-->
            <div class="container" style="width: 100%; margin: 0 auto">
                <a class="btn btn-lg btn-light btn-block" href="/posts">Volver</a>
            </div>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>