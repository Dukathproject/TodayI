<%- include("../partials/header") %>

<!--Body Content-->
<div class="container">
    <div class="row" style="text-align: center;">
        <!--Title-->
        <h1 class="col-lg-12" style="width: 100%; margin: 30px auto">Add new comment to <%= campground.name %></h1>
            <div style="width: 30%; margin: 0 auto">
            <!--Form-->
            <form class="col-lg-12" action="/campgrounds/<%= campground._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <!--Go Back Button-->
            <div class="container" style="width: 100%; margin: 0 auto">
                <a class="btn btn-lg btn-light btn-block" href="/campgrounds">Go Back</a>
            </div>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>