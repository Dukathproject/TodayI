<%- include("../partials/header") %>

<!--Body Content-->
<div class="container">
    <div class="row" style="text-align: center;">
        <!--Title-->
        <h1 class="col-lg-12" style="width: 100%; margin: 30px auto">Nueva Publicaci√≥n</h1>
            <div style="width: 30%; margin: 0 auto">
            <!--Form-->
            <form class="col-lg-12" action="/stories" method="POST">
