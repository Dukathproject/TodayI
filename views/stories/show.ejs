                            <input type="text" name="place" placeholder="Where are you from?">
                        </div>
                        <div>
                            <button>Share!</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </body>
    <script src="/scripts/storiesgenerator.js" crossorigin="anonymous"></script>
