<%- include("../partials/header") %>

<!--Body Content-->
<div class="container">
    <div class="row" style="text-align: center;">
        <!--Title-->
        <h1 class="col-lg-12" style="width: 100%; margin: 30px auto">Editar <%= story.name %></h1>
            <div style="width: 30%; margin: 0 auto">
            <!--Form-->
            <form class="col-lg-12" action="/stories/<%= story._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="story[name]" value="<%= story.name %>">
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="story[bodytext]" type="text" rows="10" cols="50" value="<%= story.bodytext %>">Body</textarea>
                    <!-- <input class="form-control" type="number" name="story[bodytext]" value="<%= story.bodytext %>"> -->
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="story[image]" value="<%= story.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="story[description]" value="<%= story.description %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="story[origAuthor]" value="<%= story.origAuthor %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Guardar</button>
                </div>
            </form>
            <!--Go Back Button-->
            <div class="container" style="width: 100%; margin: 0 auto">
                <a class="btn btn-lg btn-light btn-block" href="/posts">Volver</a>
            </div>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>